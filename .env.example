# Lead Scoring Agent - Environment Configuration
# Copy this to .env and fill in your API keys

# ==================================
# PUBMED / NCBI (Optional - Free)
# ==================================
# Get API key at: https://www.ncbi.nlm.nih.gov/account/settings/
# Not required, but increases rate limit from 3 to 10 requests/sec
NCBI_API_KEY=
NCBI_EMAIL=your-email@example.com

# ==================================
# LINKEDIN DATA (Paid Services)
# ==================================
# Proxycurl - LinkedIn profile scraping
# Get key at: https://nubela.co/proxycurl/
PROXYCURL_API_KEY=

# Apollo.io - Sales intelligence 
# Get key at: https://www.apollo.io/
APOLLO_API_KEY=

# ==================================
# EMAIL ENRICHMENT
# ==================================
# Hunter.io - Email finder
# Get key at: https://hunter.io/
HUNTER_API_KEY=

# ==================================
# COMPANY DATA
# ==================================
# Crunchbase - Funding/company data
# Get key at: https://www.crunchbase.com/
CRUNCHBASE_API_KEY=

# ==================================
# AI/LLM ENRICHMENT
# ==================================
# OpenAI - For text enrichment
OPENAI_API_KEY=

# Google Gemini - Alternative LLM
GEMINI_API_KEY=

# ==================================
# OUTPUT / PUBLISHING
# ==================================
# Google Sheets
GOOGLE_CREDS_JSON=google_creds.json
SHEET_ID=

# Telegram alerts (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=
